{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@dlocal/ui": ["libs/ui/src/index.ts"],
      "@dlocal/ui/*": ["libs/ui/src/*"],
      "@dlocal/auth": ["libs/auth/src/index.ts"],
      "@dlocal/auth/*": ["libs/auth/src/*"],
      "@dlocal/types": ["libs/types/src/index.ts"],
      "@dlocal/types/*": ["libs/types/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
